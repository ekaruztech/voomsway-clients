<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
    <!--<link rel="stylesheet" media="screen" href="https://unpkg.com/voomsway@latest/voomsway.css">-->
    <link rel="stylesheet" media="screen" href="/styles/voomsway.css">
    <link rel="stylesheet" href='/css/styles.css'/>
    <link rel="stylesheet" href='/css/override.css'/>
    <link href="/assets/favicon.png" type="image/x-icon" rel="shortcut icon"/>
    <title>ATL Motors - Access Transit Limited | Book Bus Trip Online</title>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-93215177-2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-93215177-2');
    </script>

</head>
<body>
<%
const capitalizeFirstLetter = (string) => {
    return string.charAt(0).toUpperCase() + string.slice(1);
};
%>
<% include partials/navbar.ejs %>
<section class="main-section">
    <div class="container-fluid section-title">
        <div class="row">
            <div class="col-lg-12 col-sm-12 text-center">
                <h1 class="title">Our Terminals</h1>
            </div>
        </div>
    </div>
    <div class="container mt-3 terminal">
        <div class="row mt-3">
            <% terminals.forEach( (terminal) => { %>
            <div class="col-lg-6 col-sm-12 ">
                <div class="card bg-white shadow-sm mt-3">
                    <div class="card-body mt-2">
                        <h2 class="card-title"><%= `${capitalizeFirstLetter(terminal.location.state)}` %></h2>
                        <p class="card-title mt-2"><i
                                    class="fas fa-location-arrow fa-lg"></i>
                            <%= `${capitalizeFirstLetter(terminal.location.city)}, ${capitalizeFirstLetter(terminal.location.state)}` %>
                        </p>
                        <p class="card-title mt-2"><i
                                    class="fas fa-map-marker-alt fa-lg"></i>
                            <%= `${terminal.location.street}, ${terminal.location.city}, ${terminal.location.state}` %>
                        </p>
                        <p class="card-title mt-2"><i class="fas fa-phone-volume fa-lg"> </i> +2348156786734</p>
                        <p class="card-title mt-2"><i class="fa fa-envelop fa-lg"> </i> email@yourcompany.com</p>
                        <% if (terminal.destinations && terminal.destinations.length) { %>
                        <% terminal.destinations.forEach((destination) =>  { %>
                        <p class="card-title mb-2"><i class="fas fa-shuttle-van fa-lg"></i>
                            <%= `${capitalizeFirstLetter(destination.location.city)}, ${capitalizeFirstLetter(destination.location.state)}` %>
                        </p>
                        <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>
<% include partials/footer.ejs %>
</body>
</html>
